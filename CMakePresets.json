{
	"version": 3,
	"configurePresets": [
		{
			"name": "defaults",
			"hidden": true,
			"binaryDir": "${sourceDir}/builds/${presetName}"
		},
		{
			"name": "win",
			"inherits": "defaults",
			"generator": "Visual Studio 17 2022",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},
			"architecture": "Win32",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
		},
		{
			"name": "mac",
			"inherits": "defaults",
			"generator": "Ninja Multi-Config",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			}
		},
		{
			"name": "linux",
			"inherits": "defaults",
			"generator": "Ninja Multi-Config",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "linux-32",
			"inherits": "defaults",
			"generator": "Ninja Multi-Config",
                        "cacheVariables": {
                                "BITS": "-m32"
                        },
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		}
	],
	"buildPresets": [
		{
			"name": "win",
			"configurePreset": "win"
		},
		{
			"name": "mac",
			"configurePreset": "mac"
		},
		{
			"name": "linux",
			"configurePreset": "linux"
		},
		{
			"name": "linux-32",
			"configurePreset": "linux-32"
		}
	]
}
